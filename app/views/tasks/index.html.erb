<h1>タスク一覧</h1>

<!-- このany?の意味は？データなしの場合への対応？ -->
<% if @tasks.any? %>
  <table class="table table-striped">
    <thead>
      <tr>
        <th>id</th>
        <th>タスク</th>
        <th>ステータス</th>
      </tr>
    </thead>
    <tbody>
      <% @tasks.each do |task| %>
        <tr>
          <td><%= link_to task.id, task %></td>
          <td><%= task.task%></td>
          <td><%= task.status%></td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <div>
    <!-- これはどのような意味？-->
    <%= paginate @tasks %>
  </div>
<% end %>

<%= link_to '新規タスクの追加', new_task_path, class: "btn btn-primary" %>